<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
		android:id="@+id/itemWholeDayForecastCardView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/spacing_x_small"
		app:cardCornerRadius="@dimen/spacing_xx_small"
		app:cardElevation="@dimen/spacing_x_small"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/itemWholeDayForecastDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/spacing_normal"
				android:layout_marginTop="@dimen/spacing_normal"
				android:textSize="20sp"
				app:layout_constrainedWidth="true"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:text="Date: 2023-06-06 09:00:00" />

			<TextView
				android:id="@+id/itemWholeDayForecastTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/spacing_normal"
				android:layout_marginTop="@dimen/spacing_xx_small"
				android:textSize="16sp"
				app:layout_constraintStart_toStartOf="@id/itemWholeDayForecastDate"
				app:layout_constraintTop_toBottomOf="@id/itemWholeDayForecastDate"
				tools:text="Weather: Rain" />

			<TextView
				android:id="@+id/itemWholeDayForecastDescription"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/spacing_normal"
				android:layout_marginTop="@dimen/spacing_xx_small"
				android:textSize="16sp"
				app:layout_constraintStart_toStartOf="@id/itemWholeDayForecastDate"
				app:layout_constraintTop_toBottomOf="@id/itemWholeDayForecastTitle"
				tools:text="Description: moderate rain" />

			<TextView
				android:id="@+id/itemWholeDayForecastTemperature"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/spacing_normal"
				android:layout_marginTop="@dimen/spacing_xx_small"
				android:textSize="16sp"
				app:layout_constraintStart_toStartOf="@id/itemWholeDayForecastDate"
				app:layout_constraintTop_toBottomOf="@id/itemWholeDayForecastDescription"
				tools:text="Temperature: 57 Â°C" />

			<TextView
				android:id="@+id/itemWholeDayForecastHumidity"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/spacing_normal"
				android:layout_marginTop="@dimen/spacing_xx_small"
				android:layout_marginBottom="@dimen/spacing_normal"
				android:textSize="16sp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintStart_toStartOf="@id/itemWholeDayForecastDate"
				app:layout_constraintTop_toBottomOf="@id/itemWholeDayForecastTemperature"
				tools:text="Humidity: 55 %" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>