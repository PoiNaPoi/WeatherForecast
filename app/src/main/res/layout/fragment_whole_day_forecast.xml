<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		android:id="@+id/wholeDayForecastBackButton"
		android:layout_width="@dimen/spacing_xxx_large"
		android:layout_height="@dimen/spacing_xxx_large"
		android:layout_marginStart="@dimen/spacing_xxx_large"
		android:layout_marginTop="@dimen/spacing_xxx_large"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_back_button" />

	<TextView
		android:id="@+id/wholeDayForecastTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/spacing_normal"
		android:text="@string/whole_day_forecast_title_text"
		android:textSize="24sp"
		app:layout_constrainedWidth="true"
		app:layout_constraintBottom_toBottomOf="@id/wholeDayForecastBackButton"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@id/wholeDayForecastBackButton" />

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/wholeDayForecastRecyclerView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_normal"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
		app:layout_constrainedHeight="true"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/wholeDayForecastTitle"
		tools:itemCount="5"
		tools:listitem="@layout/item_whole_day_forecast" />

</androidx.constraintlayout.widget.ConstraintLayout>